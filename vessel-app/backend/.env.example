# Backend environment configuration
# Copy this file to ".env" and fill in the real credentials before starting the server.

DATABASE_URL=postgres://postgres:password@localhost:5432/vessel
PGSSLMODE=require
REDIS_URL=redis://default:password@localhost:6379/0
JWT_SECRET=replace-with-secure-random-hex
PORT=4000
UPLOAD_MAX_BYTES=209715200

# Optional email settings (leave blank to log preview links instead of sending real mail)
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USER=verification@godlyme.com
SMTP_PASS=<the mailbox password>
EMAIL_FROM="Godly Me Verification <verification@godlyme.com>"

# Frontend origin used for password reset links
APP_BASE_URL=http://localhost:5173
